{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Backend: node index.js",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/backend/index.js",
            "cwd": "${workspaceFolder}/backend"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Frontend: next dev",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "cwd": "${workspaceFolder}/frontend",
            "serverReadyAction": {
                "pattern": "- Local:\\s+(https?://localhost:\\d+)",
                "uriFormat": "%s",
                "action": "openExternally"
            }
        }
    ]
}